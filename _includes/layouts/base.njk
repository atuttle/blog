<!doctype html>
<html lang="en">
  <head>
    {% metagen
      name="Adam Tuttle",
      title=title or metadata.title,
      desc=summary or metadata.description,
      twitter_card_type="summary_large_image",
      twitter_handle="adamtuttle",
      url=metadata.url + page.url,
      img=(metadata.url + img) or null
    %}
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='0.9em' font-size='90'>ðŸ¦Ž</text></svg>" />
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/ck.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <link href="https://github.com/atuttle" rel="me" />
    <link rel="webmention" href="https://webmention.io/adamtuttle.codes/webmention" />
    <link rel="pingback" href="https://webmention.io/adamtuttle.codes/xmlrpc" />
  </head>
  <body>
    <header>
      <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>

      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
      <ul class="nav">
      {%- for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
      {%- endfor %}
      </ul>
    </header>

    {{ content | safe }}

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
